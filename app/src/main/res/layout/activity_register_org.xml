<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snow_leopard_wallpaper1"
    tools:context="org.kashmirworldfoundation.WildlifeGeoSnap.RegisterOrgActivity">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="274dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:elegantTextHeight="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:shadowColor="#B4B1B1"
        android:text="Register New Organization"
        android:textColor="@color/blackColor"

        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="288dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:elegantTextHeight="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:shadowColor="#B4B1B1"
        android:text="Wildlife GeoSnap"
        android:textColor="@color/blackColor"
        android:textSize="36sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/countries"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrgPhone" />

    <EditText
        android:id="@+id/orgwebsite"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Organization Website"
        android:inputType="text"
        android:textColorHint="@color/blackColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrgEmail" />

    <EditText
        android:id="@+id/OrgName"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Organization Name"
        android:inputType="text"
        android:textColorHint="@color/blackColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/OrgPhone"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColorHint="@color/blackColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orgwebsite" />

    <TextView
        android:id="@+id/logindr"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Already Registered Your Organization? Click Here"
        android:textColor="@color/blackColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterB" />

    <Button
        android:id="@+id/RegisterB"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:background="#FFFF8D"
        android:backgroundTint="@color/grayColor"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:fontFamily="sans-serif"
        android:text="REGISTER"
        android:textColor="#1B1A1A"
        android:textSize="18sp"
        android:textStyle="bold"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countries"
        app:strokeColor="@color/blackColor"
        app:strokeWidth="0.8dp" />

    <EditText
        android:id="@+id/OrgEmail"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Organization Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/blackColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrgName" />

</androidx.constraintlayout.widget.ConstraintLayout>
