<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snow_leopard_wallpaper1"
    tools:context="org.kashmirworldfoundation.WildlifeGeoSnap.RegisterSpinner0">

    <TextView
        android:id="@+id/RefreshSpin0"
        android:layout_width="301dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Refresh"
        android:textColor="@color/blackColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GoBackLogin" />

    <Button
        android:id="@+id/submit0"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:background="#FFFF8D"
        android:backgroundTint="@color/grayColor"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:fontFamily="sans-serif"
        android:text="Submit"
        android:textColor="@color/blackColor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_orgS3"
        app:strokeColor="@color/blackColor"
        app:strokeWidth="0.8dp" />

    <TextView
        android:id="@+id/GoBackLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Already have an account?"
        android:textColor="@color/blackColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit0" />

    <Spinner
        android:id="@+id/register_orgS3"
        android:layout_width="375dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/blackColor"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Select Country:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_reg2" />

    <TextView
        android:id="@+id/title_reg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:elegantTextHeight="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:shadowColor="#B4B1B1"
        android:text="Choose Organization"
        android:textColor="@color/blackColor"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
